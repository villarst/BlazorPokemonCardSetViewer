<style>
    .rounded-switch-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 10px;
    }
    .filter-labels {
        margin-left: 0.5rem;
        font-size: 20px;
        font-family: "Kanit-Regular", serif;
    }
    .switch {
        position: relative;
        width: 40px;
        height: 21px;
    }
    /* Hide default HTML checkbox */
    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ffffff;
        outline: 2px solid rgb(121 , 121, 121);
        -webkit-transition: .4s;
        transition: .4s;
    }
    .slider:before {
        position: absolute;
        content: "";
        height: 16px;
        width: 16px;
        left: 3px;
        bottom: 3px;
        background-color: rgb(121, 121, 121);
        -webkit-transition: .2s;
        transition: .2s;
    }
    input:checked + .slider {
        background-color: #00c241;
    }
    input:focus + .slider {
        box-shadow: 0 0 1px #ffffff;
    }
    input:checked + .slider:before {
        -webkit-transform: translateX(17px);
        -ms-transform: translateX(17px);
        transform: translateX(17px);
    }
    .slider.round {
        border-radius: 34px;
    }
    .slider.round:before {
        border-radius: 50%;
    }
</style>

<div class="rounded-switch-container">
    <label class="filter-labels">@RarityName</label>
    <label class="switch">
        <input type="checkbox" (change)="applyHit($event, 'paldeanFates')">
        <span class="slider round"></span>
    </label>
</div>

@code {
    [Parameter] public string RarityName { get; set; }
}