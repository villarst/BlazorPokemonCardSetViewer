<style>
    .rounded-switch-container {}
    .filter-labels {
        /* margin-top: 20px; */
        margin-left: 20px;
        font-size: 20px;
        font-family: "Kanit-Regular", serif;
        margin-top: 30px;
        text-wrap: auto;

        /* border: 2px solid #333;
        outline: 2px solid blue;
        outline-offset: 15px; This sets the space between the outline and the border edge */

    }
    .filter-labels, .switch {
        display: inline-block;
        vertical-align: top; /* Aligns them vertically */
    }
    /* The switch - the box around the slider */
    .switch {
        position: relative;
        float: right;
        margin-right: 2px;
        width: 40px; /* 40 */
        height: 20px; /* 20px */
        margin-left: 40px;
        margin-top: 33px;
    }


    /* Hide default HTML checkbox */
    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* The slider */
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        /* background-color: #878787; */
        background-color: #ffffff;
        outline: 2px solid rgb(121 , 121, 121);

        -webkit-transition: .4s;
        transition: .4s;
    }

    .slider:before {
        position: absolute;
        content: "";
        height: 16px;
        width: 16px;
        left: 2px;
        bottom: 3px;
        background-color: rgb(121, 121, 121);
        -webkit-transition: .2s;
        transition: .2s;
    }

    input:checked + .slider {
        background-color: #00c241;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #ffffff;
    }

    input:checked + .slider:before {
        -webkit-transform: translateX(19px);
        -ms-transform: translateX(19px);
        transform: translateX(19px);
    }

    /* Rounded sliders */
    .slider.round {
        border-radius: 34px;
    }

    .slider.round:before {
        border-radius: 50%;
    }

</style>

<div class="rounded-switch-container">
    <label class="filter-labels">@RarityName</label>
    <label class="switch">
        <input type="checkbox" (change)="applyHit($event, 'paldeanFates')">
        <span class="slider round"></span>
    </label>
</div>

@code {
    [Parameter] public string RarityName { get; set; }
}