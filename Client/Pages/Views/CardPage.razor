@page "/cards"
@using BlazorPokemonCardSetViewer.Components
@using BlazorPokemonCardSetViewer.Features.PokemonCard
@using BlazorPokemonCardSetViewer.Pages.ViewModels
@inject CardPageViewModel ViewModel
@inject ILogger<CardPage> Logger
@implements IDisposable

<style>
    /* Apply to all four sides */
    /* top and bottom | left and right ==> 0 0 */
    /* top | left and right | bottom ==> 0 0 0 */
    /* top | right | bottom | left  ==> 0 0 0 0 */
    .sidebar {
        display: block;
        position: fixed;
        left: 0;
        top: 5.875rem;
        width: 320px;
        height: calc(100vh - 5.87rem);
        padding: 0.5rem 1.75rem 0.5rem 0.75rem;
        box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
        background-color: white;
        box-sizing: border-box;
        overflow-y: auto;
        z-index: 50;
    }
    .cards-header {
        margin: 0 0 1.625rem 1rem;
        padding: 0;
    }
    .rarities-header-container {
        display: flex; 
        justify-content: space-between; 
        border-bottom-style: solid; 
        border-color: #a5a5a5; 
        border-width: 2px; 
        margin-bottom: 0.5rem; 
        margin-left: 0.875rem; 
        padding-bottom: 0.375rem;
    }
    .rarities-header {
        margin: 0;
        padding: 0;
    }
    .search-box-container {
        display: flex;
        align-items: center;
        line-height: 1;
        margin-bottom: 1rem;
        margin-top: 0.75rem;
    }
    .search-box-input {
        margin-right: 1rem;
        position: relative;
        width: 200px;
        height: 36px;
        font-size: 24px;
    }
    .rarities-filter-container {
        display: flex;
        align-items: center;
        margin-left: 1rem;
        margin-bottom: 0.75rem;
        justify-content: space-between;
    }
    .rarities-filter-wrapper {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .rarities-icon-container {
        display: inline-flex;
        align-items: center;
        cursor: pointer;
    }
    .rarities-icon-container:hover .transparent-box {
        display: block;
    }
    .transparent-box {
        position: absolute;
        top: 0;
        height: 26px;
        width: 25px;
        margin-left: 18px;
        margin-top: 4px;
        background-color: rgba(128, 128, 128, 0.5); /* Adjust the last value (0.5) for the transparency */
        display: none;
    }
    .hide-rarities-button {
        font-family: "Kanit-Light", serif;
        margin-top: 0;
        font-size: 20px;
        background-color: #ffffff;
        border: #ffffff;
        text-decoration: underline; /* Adding an underline to the text */
    }
    .hide-rarities-button:hover {
        background-color: rgba(128, 128, 128, 0.5);
    }
    .main-content {
        margin-left: 340px; /* sidebar width + some gap */
        padding: 6.125rem 1rem 2rem 1rem;
        min-width: 600px;
    }
    .card-totals-container {
        margin-left: 1rem;
        margin-top: 0.5rem;
    }
    .cards-section {
        display: grid;
        grid-template-columns: repeat(4, 1fr); /* is the same as 1fr 1fr 1fr 1fr */
        gap: 1.5rem;
        margin-top: 0.6rem;
        margin-bottom: 2rem;
    }
    .card-container {
        display: flex;
        flex-direction: column; 
        align-items: center;
        justify-content: flex-start;
        min-width: 19.5rem;
        height: 560px;
        border-radius: 1rem;
        border: 1px solid #e3e3e3;
        padding-top: 0.75rem;
        box-sizing: border-box;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .card-container:hover {
        transform: translateY(-6px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }
    .card-image-small {
        width: 18.585rem;
    }
    .card-img-placeholder {
        height: 12.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: rgba(255, 255, 255, 0);
        color: #6c757d;
    }
    .card-img-placeholder i {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }
    .card-body {
        width: 275px;
        height: 125px;
        overflow: hidden;
        padding: 1rem;
    }
    .card-title {
        font-size: 1.1rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }
    .card-subtitle {
        font-size: 0.9rem;
        color: #666;
    }
    .card-text {
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }
    
    /* Pagination Styles */
    .pagination-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 0.5rem;
    }
    .pagination-nav {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .pagination {
        margin: 0;
        display: flex;
        list-style: none;
        padding: 0;
    }
    .page-link {
        color: #007bff;
        border: 1px solid #dee2e6;
        padding: 0.5rem 0.75rem;
        text-decoration: none;
        background-color: #fff;
    }
    .page-link:hover {
        color: #0056b3;
        background-color: #e9ecef;
        border-color: #dee2e6;
    }
    .page-item.disabled .page-link {
        color: #6c757d;
        background-color: #fff;
        border-color: #dee2e6;
        cursor: not-allowed;
    }
    .page-item:first-child .page-link {
        border-top-left-radius: 0.25rem;
        border-bottom-left-radius: 0.25rem;
    }
    .page-item:last-child .page-link {
        border-top-right-radius: 0.25rem;
        border-bottom-right-radius: 0.25rem;
    }
    .transparent-box {
        position: absolute;
        top: 0;
        height: 26px;
        width: 25px;
        margin-left: 18px;
        margin-top: 4px;
        background-color: rgba(128, 128, 128, 0.5); /* Adjust the last value (0.5) for the transparency */
        display: none;
    }
</style>

<div class="sidebar">
    <div>
        <div class="rarities-filter-container">
            <div class="rarities-filter-wrapper">
                <div class="rarities-icon-container" @onclick="ToggleRarityFilters">
                    <i class="bi bi-filter" style="font-size: 32px;"></i>
                </div>
                <button class="hide-rarities-button" @onclick="ToggleRarityFilters">
                    @_rarityFilterText
                </button>
            </div>
            <button class="btn button-info"
                    disabled="@_disableApplyButton"
                    @onclick="() => SearchCards(true)">
                Apply
            </button>
        </div>
        @if (_showRarities)
        {
            <div class="rarities-header-container">
                <h3 class="rarities-header" style="align-items: flex-start">Rarities</h3>
            </div>
            @foreach (var rarity in ViewModel.Rarities.Data)
            {
                <RoundedSwitch
                    RarityName="@rarity.Name"
                    Checked="ViewModel.RarityNameAndValues![rarity.Name!]"
                    OnCheckBoxClicked="@UpdateDictionaryWithKey"/>
            }
        }
    </div>
</div>
<div class="main-content">
    <div class="search-box-container">
        <InputText
            class="search-box-input"
            @bind-Value="@ViewModel.SearchTerm"
            @onkeyup="@(async (e) =>
                      {
                          if (e.Key == "Enter") await SearchCards(false);
                      })"
            disabled="@_disableSearchBox"/>
        <button class="btn button-success">Search</button>
    </div>
    @if (ViewModel.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewModel.ErrorMessage
        </div>
    }
    @if (ViewModel.PagedCards.Data.Any())
    {
        <div class="card-totals-container">
            <small class="text-muted">
                @ViewModel.PagedCards.TotalCount - results
            </small>
        </div>
        <div class="cards-section">
            @foreach (var card in ViewModel.PagedCards.Data)
            {
                <div class="card-container">
                    @if (!string.IsNullOrEmpty(card.ImageSmall))
                    {
                        <div @onclick="() => CardImageClicked(card)">
                            <img src="@card.ImageSmall" class="card-image-small" alt="@card.Name">
                        </div>
                    }
                    else
                    {
                        <div class="card-img-placeholder">
                            <i class="fas fa-image"></i>
                            <span>No Image</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@card.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">ID: @card.Id</h6>
                        @if (!string.IsNullOrEmpty(card.CardNumber.ToString()))
                        {
                            <h6 class="card-subtitle mb-2 text-muted">Set Number: @card.CardNumber</h6>
                        }
                        @if (!string.IsNullOrEmpty(card.Hp) && card.Hp != "N/A")
                        {
                            <h6 class="card-text">HP: @card.Hp</h6>
                        }
                        @if (!string.IsNullOrEmpty(card.Raritity))
                        {
                            <h6 class="card-text">Rarity: @card.Raritity</h6>
                        }
                    </div>
                </div>
            }
        </div>
        <div class="pagination-container">
            @if (ViewModel.PagedCards.TotalPages > 1)
            {
                <nav aria-label="Card pagination" class="pagination-nav">
                    <div style="display: flex;">
                        <ul class="pagination">
                            <li class="page-item @(ViewModel.PagedCards.HasPreviousPage ? "" : "disabled")">
                                <button class="page-link" @onclick="ViewModel.PreviousPageAsync"
                                        disabled="@(!ViewModel.PagedCards.HasPreviousPage || ViewModel.IsLoading)">
                                    Previous
                                </button>
                            </li>
                            <li class="page-item @(ViewModel.PagedCards.HasNextPage ? "" : "disabled")">
                                <button class="page-link" @onclick="ViewModel.NextPageAsync"
                                        disabled="@(!ViewModel.PagedCards.HasNextPage || ViewModel.IsLoading)">
                                    Next
                                </button>
                            </li>
                        </ul>
                        <div class="showing-current-page-container">
                            <small class="text-muted">
                                Page @ViewModel.CurrentPage of @ViewModel.PagedCards.TotalPages
                            </small>
                        </div>
                    </div>
                </nav>

            }
            <div class="showing-current-cards-container">
                @if (ViewModel.PagedCards.TotalCount > 0)
                {
                    <small class="text-muted showing-current-cards-text">
                        Showing @((ViewModel.CurrentPage - 1) * ViewModel.PageSize + 1) -
                        @(Math.Min(ViewModel.CurrentPage * ViewModel.PageSize, ViewModel.PagedCards.TotalCount))
                        of @ViewModel.PagedCards.TotalCount cards
                    </small>
                }
            </div>
        </div>
    }
    else
    {
        switch (ViewModel.IsLoading)
        {
            case false when !string.IsNullOrEmpty(ViewModel.SearchTerm):
                <div class="alert alert-info">
                    <i class="fas fa-search"></i> No cards found for "@ViewModel.SearchTerm"
                </div>
                break;
            case false:
                <div class="alert alert-info">
                    <i class="fas fa-search"></i> Enter a card name to search for Pokemon cards.
                </div>
                break;
        }
    }
</div>
<ModalImageDialog 
    Opened="@_showDialog" 
    ImageSource="@_selectedCardLargeImageUrl" 
    CloseButtonClicked="ResetDialog"/>

@code {
    bool _disableApplyButton;
    bool _showDialog;
    bool _disableSearchBox;
    bool _showRarities;
    string _selectedCardLargeImageUrl = string.Empty;
    string _rarityFilterText = "Show Rarities";

    protected override async Task OnInitializedAsync()
    {
        _disableApplyButton = true;
        _showRarities = false;
        await GrabRarities();
        Logger.LogInformation("CardPage initialized");
    }

    public void Dispose()
    {
        ViewModel.SearchTerm = string.Empty;
        ViewModel.CardId = string.Empty;
    }

    async Task SearchCards(bool applyButtonClicked)
    {
        if (applyButtonClicked)
        {
            Logger.LogInformation($"Apply button clicked for: {ViewModel.SearchTerm}");
        }
        else
        {
            Logger.LogInformation($"Search button clicked for: {ViewModel.SearchTerm}");
        }

        ViewModel.CurrentPage = 1; // Reset to first page
        await ViewModel.LoadCardsBySearchTermAsync();
    }

    async Task GrabRarities()
    {
        Logger.LogInformation("Grabbing card rarities.");
        await ViewModel.LoadRaritiesOfCards();
    }

    void CardImageClicked(PokemonCardDataResponse card)
    {
        _selectedCardLargeImageUrl = card.ImageLarge!;
        ShowDialog();
    }

    void ShowDialog()
    {
        _showDialog = true;
        _disableSearchBox = true;
        StateHasChanged();
        Logger.LogInformation("Card image shown in \"Large\" format.");
    }

    void ResetDialog()
    {
        _showDialog = false;
        _disableSearchBox = false;
        StateHasChanged();
        Logger.LogInformation("Card image dialog closed.");
    }

    void ToggleRarityFilters()
    {
        if (_showRarities)
        {
            _rarityFilterText = "Show Rarities";
            _showRarities = false;
        }
        else
        {
            _rarityFilterText = "Hide Rarities";
            _showRarities = true;
        }

        StateHasChanged();
    }

    void UpdateDictionaryWithKey(string name)
    {
        var rarityValue = ViewModel.RarityNameAndValues![name];
        rarityValue = !rarityValue;
        ViewModel.RarityNameAndValues[name] = rarityValue;
        Logger.LogInformation($"Rarity changed: {name} to {rarityValue} as selected.");

        if (ViewModel.CheckIfRaritiesSelected())
        {
            Logger.LogInformation("Apply button enabled.");
            _disableApplyButton = false;
        }
        else
        {
            Logger.LogInformation("Apply button disabled.");
            _disableApplyButton = true;
        }
    }
}